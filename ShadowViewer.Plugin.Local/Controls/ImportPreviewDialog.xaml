<UserControl
    x:Class="ShadowViewer.Plugin.Local.Controls.ImportPreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:ShadowViewer.Plugin.Local.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="using:ShadowViewer.Plugin.Local.Entities"
    xmlns:i18N="using:ShadowViewer.Plugin.Local.I18n"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ShadowViewer.Plugin.Local.Models"
    xmlns:services="using:ShadowViewer.Plugin.Local.Services.Interfaces"
    xmlns:vm="using:ShadowViewer.Plugin.Local.ViewModels"
    mc:Ignorable="d">

    <Grid MinWidth="400">
        <StackPanel Spacing="16">
            <!--  Importer Selection  -->
            <StackPanel Spacing="8">
                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}" Text="{i18N:Locale Key=ComicImporter}" />
                <ComboBox
                    HorizontalAlignment="Stretch"
                    ItemsSource="{x:Bind ViewModel.Importers, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedImporter, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="services:IComicImporter">
                            <StackPanel Padding="0,4" Spacing="2">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock FontWeight="SemiBold" Text="{x:Bind Name}" />
                                    <Border
                                        Padding="4,0"
                                        VerticalAlignment="Center"
                                        Background="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                        CornerRadius="4">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="{x:Bind PluginId}" />
                                    </Border>
                                </StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    MaxLines="2"
                                    Text="{x:Bind Description}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!--  Preview Info  -->
            <Grid Height="160">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    Width="120"
                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="4">
                    <Image Source="{x:Bind ViewModel.PreviewInfo.Thumb, Mode=OneWay}" Stretch="Uniform" />
                </Border>

                <StackPanel
                    Grid.Column="1"
                    Margin="16,0,0,0"
                    VerticalAlignment="Top"
                    Spacing="8">
                    <TextBlock
                        MaxLines="2"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="{x:Bind ViewModel.PreviewInfo.Name, Mode=OneWay}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />

                    <StackPanel Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                <Run Text="{i18N:Locale Key=Pages}" />
                            </TextBlock>
                            <TextBlock Text="{x:Bind ViewModel.PreviewInfo.ComicDetail.PageCount, Mode=OneWay}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                <Run Text="{i18N:Locale Key=Chapters}" />
                                <Run Text=":" />
                            </TextBlock>
                            <TextBlock Text="{x:Bind ViewModel.PreviewInfo.ComicDetail.ChapterCount, Mode=OneWay}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!--  Loading State inside Preview area  -->
                <Grid
                    Grid.ColumnSpan="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                    <ProgressRing IsActive="True" />
                </Grid>

                <!--  Password Input  -->
                <Grid
                    Grid.ColumnSpan="2"
                    Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}"
                    Visibility="{x:Bind ViewModel.PreviewInfo.IsPasswordRequired, Mode=OneWay, FallbackValue=Collapsed}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="8">
                        <TextBlock Text="{i18N:Locale Key=PasswordRequired}" />
                        <PasswordBox
                            Width="200"
                            PasswordChanged="PasswordBox_OnPasswordChanged"
                            PlaceholderText="Password" />
                        <Button
                            HorizontalAlignment="Right"
                            Command="{x:Bind ViewModel.RefreshPreviewCommand}"
                            Content="{i18N:Locale Key=Confirm}"
                            Style="{ThemeResource AccentButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Grid>

            <!--  Chapter Preview  -->
            <ScrollViewer
                MaxHeight="200"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto"
                Visibility="{x:Bind ViewModel.PreviewInfo.HasChapters, Mode=OneWay}">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.PreviewInfo.PreviewChapters, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="entities:ComicChapter">
                            <Grid
                                Padding="8,4"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                ToolTipService.ToolTip="{x:Bind Name}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        MaxWidth="150"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Name}"
                                        TextTrimming="CharacterEllipsis" />
                                    <Border
                                        Padding="6,0"
                                        VerticalAlignment="Center"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="8">
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{ThemeResource TextFillColorInverseBrush}"
                                            Text="{x:Bind PageCount}" />
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                    <ItemsRepeater.Layout>
                        <controls:WrapLayout HorizontalSpacing="4" VerticalSpacing="4" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>

            <!--  SubPreviews (Comics) Preview  -->
            <ScrollViewer
                MaxHeight="200"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto"
                Visibility="{x:Bind ViewModel.PreviewInfo.HasSubPreviews, Mode=OneWay}">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.PreviewInfo.SubPreviews, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="models:ComicImportPreview">
                            <StackPanel
                                Padding="8,8"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Spacing="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Width="40"
                                        Height="54"
                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                        CornerRadius="4">
                                        <Image Source="{x:Bind Thumb}" Stretch="UniformToFill" />
                                    </Border>
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Center"
                                        Spacing="4">
                                        <TextBlock
                                            MaxWidth="200"
                                            FontSize="13"
                                            Text="{x:Bind Name}"
                                            TextTrimming="CharacterEllipsis" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{i18N:Locale Key=Pages}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{x:Bind ComicDetail.PageCount}" />
                                            <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="{i18N:Locale Key=Chapters}" />
                                                <Run Text=":" />
                                            </TextBlock>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{x:Bind ComicDetail.ChapterCount}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <ItemsRepeater ItemsSource="{x:Bind PreviewChapters}">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="entities:ComicChapter">
                                            <Grid
                                                Padding="6,2"
                                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                ToolTipService.ToolTip="{x:Bind Name}">
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <TextBlock
                                                        MaxWidth="100"
                                                        FontSize="12"
                                                        Text="{x:Bind Name}"
                                                        TextTrimming="CharacterEllipsis" />
                                                    <Border
                                                        Padding="4,0"
                                                        VerticalAlignment="Center"
                                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                        CornerRadius="8">
                                                        <TextBlock
                                                            FontSize="10"
                                                            Foreground="{ThemeResource TextFillColorInverseBrush}"
                                                            Text="{x:Bind PageCount}" />
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                    <ItemsRepeater.Layout>
                                        <controls:WrapLayout HorizontalSpacing="4" VerticalSpacing="4" />
                                    </ItemsRepeater.Layout>
                                </ItemsRepeater>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="8" />
                    </ItemsRepeater.Layout>
                </ItemsRepeater>
            </ScrollViewer>

            <!--  Import Progress  -->
            <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.IsImporting, Mode=OneWay}">
                <Grid>
                    <TextBlock HorizontalAlignment="Left" Style="{ThemeResource BodyTextBlockStyle}">
                        <Run Text="{i18N:Locale Key=Importing}" />
                        <Run Text="..." />
                    </TextBlock>
                    <TextBlock
                        HorizontalAlignment="Right"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{ThemeResource CaptionTextBlockStyle}"
                        Text="{x:Bind ViewModel.ImportProgress, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:0.00}%'}" />
                </Grid>
                <ProgressBar Maximum="100" Value="{x:Bind ViewModel.ImportProgress, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
